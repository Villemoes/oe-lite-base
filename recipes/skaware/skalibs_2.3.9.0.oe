require ${PN}.inc

librt_flag = ""
librt_flag:native = "-lrt"

do_configure_sysdeps_libs() {
	echo "${librt_flag}" > ${B}/sysdeps/rt.lib
	echo "" > ${B}/sysdeps/socket.lib
	echo "" > ${B}/sysdeps/sysclock.lib
	echo "" > ${B}/sysdeps/tainnow.lib
	echo "" > ${B}/sysdeps/util.lib
}
do_configure[prefuncs] += "do_configure_sysdeps_libs"

# Workaround for bugs in skalibs, assuming 'char' is 'signed char'.
# This should/could be dropped when skalibs has fixed these issues.
CFLAGS += "-fsigned-char"
